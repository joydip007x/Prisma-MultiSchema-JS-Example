generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("PRISMA_DATABASE_URL")
}

model Bookmarks {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

type Moods {
  happy String?
  sad   Int?
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  mood      Moods
  Bookmarks Bookmarks[]
}
